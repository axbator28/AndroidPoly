<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Black"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">


        <ImageView
            android:id="@+id/liste_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="3"
            android:src="@drawable/ic_send"
            android:tint="@color/White"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/liste_image">
            <TextView
                android:id="@+id/liste_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="testitre"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/liste_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="testdescription un peu plus longue pour retour Ã  la ligne"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>


</RelativeLayout>